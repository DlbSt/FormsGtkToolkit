<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FormsGtkToolkit.Samples.Views.ScaleButtonView"
             xmlns:controls="clr-namespace:FormsGtkToolkit.Controls;assembly=FormsGtkToolkit.Controls"
             Title="ScaleButton">
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="100" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <controls:ScaleButton
                x:Name="ScaleBtn"
                Grid.Row="0"
                Icon="ZoomIn"
                Minimum="0"
                Maximum="10"
                StepIncrement="1"/>
            <Label
                x:Name="LabelInfo"
                Grid.Row="1"
                FontSize="Large"/>
        </Grid>
    </ContentPage.Content>
</ContentPage>