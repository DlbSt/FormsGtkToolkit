<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FormsGtkToolkit.Samples.Views.GridSplitterView"
             xmlns:controls="clr-namespace:FormsGtkToolkit.Controls;assembly=FormsGtkToolkit.Controls"
             Title="GridSplitter">
    <ContentPage.Content>
        <Grid>
            <controls:GridSplitter
                Orientation="Horizontal">
                <controls:GridSplitter.Content1>
                    <Grid>
                        <Button 
                            Text="Content 1"/>
                    </Grid>
                </controls:GridSplitter.Content1>
                <controls:GridSplitter.Content2>
                    <Grid>
                        <Button 
                            Text="Content 1"/>
                    </Grid>
                </controls:GridSplitter.Content2>
            </controls:GridSplitter>
        </Grid>
    </ContentPage.Content>
</ContentPage>